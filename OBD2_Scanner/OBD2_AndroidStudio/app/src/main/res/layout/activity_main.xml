<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIOT OBD Scanner"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Car Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VW Polo 2013  Engine: CAV 425122"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <!-- Status Display -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#1E1E1E"
        android:padding="15dp"
        android:text="Status: Ready to connect"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <!-- Connect Button -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Connect to NIOT OBD"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="10dp"/>

    <!-- Scan Button -->
    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Scan Trouble Codes"
        android:textSize="16sp"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="10dp"
        android:enabled="false"/>

    <!-- Clear Button -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Clear Codes"
        android:textSize="16sp"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="20dp"
        android:enabled="false"/>

    <!-- Info Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2D2D2D"
        android:padding="15dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For P0036 Error:"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:textStyle="bold"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Check fuse #42 (10A)\n2. Test O2 sensor heater\n3. Replace sensor 04C906262K"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</LinearLayout>
